@page
@model SecLogWeb.Pages.RegisterModel
@{
    ViewData["Title"] = "SecLog - Registratie";
    ViewData["BodyClass"] = "login-page"; // reuse centering and hide layout header/footer
}

<div class="login-container">
    <div class="header">
        <h1>
            <svg class="lock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            SecLog Registratie
        </h1>
        <p>Registreer uw bedrijf als vaste klant</p>
    </div>

    <div class="form-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            <div class="form-group">
                <label for="code">Registratiecode *</label>
                <div class="input-wrapper with-key">
                    <!-- key icon (same style as header lock-icon but sized for inputs) -->
                    <svg class="input-icon key-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <circle cx="7" cy="12" r="3"></circle>
                        <path d="M10 12l6-6"></path>
                        <path d="M20 10v4h-2v-1h-2v1h-2" />
                    </svg>
                    <input asp-for="RegistrationCode" type="text" id="code" placeholder="Voer uw registratiecode in" />
                </div>
                <small>U heeft deze code ontvangen via de mail</small>
            </div>

            <div class="form-group">
                <label for="email">Zakelijk E-mailadres *</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    <input asp-for="Email" type="email" id="email" placeholder="bedrijf@voorbeeld.nl" />
                </div>
            </div>

            <div class="form-group">
                <span asp-validation-for="RegistrationCode" class="field-validation"></span>
                <span asp-validation-for="Email" class="field-validation"></span>
            </div>

            <button type="submit" class="login-button">Doorgaan</button>

            <div class="register-section">
                <p>Heeft u al een account? <a asp-page="/Login">Log hier in</a></p>
            </div>
        </form>
    </div>
</div>
