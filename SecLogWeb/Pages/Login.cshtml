@page
@model LoginModel
@{
    ViewData["Title"] = "SecLog - Inloggen";
    ViewData["BodyClass"] = "login-page";
}


<div class="login-container">
    <div class="header">
        <h1>
            <!-- Use the exact same key/lock icon as on the Register page -->
            <svg class="lock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            SecLog
        </h1>
        <p>Welkom terug! Log in om door te gaan</p>
    </div>
    
    <div class="form-container">
        <form method="post">
            <div class="form-group">
                <label for="email">E-mailadres</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    <input type="email" id="email" name="Email" placeholder="naam@voorbeeld.nl" required />
                </div>
            </div>

            <div class="form-group">
                <label for="password">Wachtwoord</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    <input type="password" id="password" name="Password" placeholder="••••••••" required />
                    <!-- knop blijft als icoon, geen JS meer -->
                    <button type="button" class="password-toggle" disabled>
                        <svg class="eye-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </button>
                </div>
            </div>

            <button type="submit" class="login-button">Inloggen</button>

            <div class="forgot-password">
                <a href="#">Wachtwoord vergeten?</a>
            </div>

            <div class="register-section">
                <p>Nog geen account? <a asp-page="/Register">Registreer hier</a></p>
            </div>
        </form>
    </div>
</div>
