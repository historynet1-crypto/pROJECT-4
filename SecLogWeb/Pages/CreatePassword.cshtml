@page
@model SecLogWeb.Pages.CreatePasswordModel
@{
    ViewData["Title"] = "SecLog - Wachtwoord aanmaken";
    ViewData["BodyClass"] = "login-page";
}

<div class="login-container">
    <div class="header">
        <h1>
            <svg class="lock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            SecLog Wachtwoord
        </h1>
        <p>Maak een wachtwoord aan voor uw account</p>
    </div>

    <div class="form-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            <div class="form-group">
                <label for="password">Wachtwoord</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    <input asp-for="Password" type="password" id="password" placeholder="Kies een veilig wachtwoord" />
                </div>
                <span asp-validation-for="Password" class="field-validation"></span>
            </div>

            <div class="form-group">
                <label for="confirm">Bevestig wachtwoord</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                    <input asp-for="ConfirmPassword" type="password" id="confirm" placeholder="Bevestig wachtwoord" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="field-validation"></span>
            </div>

            <button type="submit" class="login-button">Account aanmaken</button>

            <div class="register-section">
                <p>Of terug naar <a asp-page="/Login">Inloggen</a></p>
            </div>
        </form>
    </div>
</div>
